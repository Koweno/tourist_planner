<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="/logstyle.css">
</head>
<body>
    <h2>Login</h2>

    <!-- Error message block -->
    <div id="errorMessage" style="display: none; color: red; font-weight: bold; margin-bottom: 10px;"></div>

    <form id="loginForm">
        <input type="text" id="username" name="username" placeholder="Username" required>
        <input type="password" id="password" name="password" placeholder="Password" required>
        <button type="submit">Log in</button>
    </form>

    <p>Don't have an account? <a href="/register">Sign up</a></p>

    <script>
        document.getElementById("loginForm").addEventListener("submit", async function(event) {
            event.preventDefault(); // Prevent page reload

            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;
            const errorMessageEl = document.getElementById("errorMessage");

            const response = await fetch("/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ username, password })
            });

            const data = await response.json();

            if (data.success) {
                window.location.href = data.redirect; // Redirect on success
            } else {
                errorMessageEl.textContent = data.message; // Show error message
                errorMessageEl.style.display = "block"; // Display error block
            }
        });
    </script>
</body> 
</html>
